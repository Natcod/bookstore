<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/purple"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
         />

    <TextView
        android:id="@+id/sender_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/message_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>


    <TextView
        android:id="@+id/sent_date_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent DateTime"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/sender_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>

    <!-- Invisible View to align the message views to the left -->
    <View
        android:id="@+id/left_alignment_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/message_text_view"
        android:layout_marginEnd="8dp"/>

</RelativeLayout>
