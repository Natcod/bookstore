<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:layout_margin="17dp"
    android:background="@color/lavender"
    tools:context=".BookClub">

    <!-- "All Groups" Button -->
    <Button
        android:id="@+id/button_all_groups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All Groups"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background"
    android:textColor="@android:color/white"
    android:padding="12dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/button_joined"
    app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <!-- "Joined" Button -->
    <Button
        android:id="@+id/button_joined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Joined"
        android:background="@drawable/button_background"
    android:textColor="@android:color/white"
    android:padding="12dp"
    app:layout_constraintStart_toEndOf="@id/button_all_groups"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintTop_toTopOf="@id/button_all_groups"/>

    <!-- ViewPager2 for swiping between tabs -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/button_all_groups"
        app:layout_constraintBottom_toTopOf="@id/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TabLayout for the ViewPager -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lavender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
